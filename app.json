{
  "expo": {
    "name": "Eurovision Bingo",
    "slug": "eurovision_bingo",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "scheme": "eurovision-bingo-scheme",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "io.eurobingo.client",
       "infoPlist": {
            "NSMicrophoneUsageDescription": "The app may ask to use your microphone. It does not need to use your microphone to work."
        }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.aagb1884.eurovision_bingo"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-router"
    ],
    "extra": {
      "router": {
        "origin": false
      },
      "eas": {
        "projectId": "dbf9ddb5-3341-4566-ac43-3fec7b349524"
      }
    }
  }
}
